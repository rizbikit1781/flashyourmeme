@model flashyourmeme.Models.VoucherViewModel
@{
    ViewData["Title"] = "Create Voucher";
}
<div class="container mt-4 min-vh-100">
    <h1 class="display-4 text-center mb-4 fw-bold">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body text-center">
            <table class="table">
                <thead>
                    <tr>
                        <th class="align-content-center">No.</th>
                        <th class="align-content-center">Profile Picture</th>
                        <th class="align-content-center">Branch Name</th>
                        <th class="align-content-center"><button type="submit" class="btn btn-outline-dark w-60"><i class="fa-solid fa-circle-plus" style="margin-right: 10px"></i>Create Voucher Template</button></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Vouchers != null && Model.Vouchers.Any())
                    {
                        foreach (var item in Model.Vouchers)
                        {
                            <tr>
                                <td>@item.No</td>
                                <td><img src="@item.ProfileImageUrl" alt="Filter Image" style="width:50px;height:50px; border-radius:20px;" /></td>
                                <td>@item.BranchName</td>
                                <td>
                                    <button type="button" class="btn custom-gradient-btn" onclick="manage(@item.No)">Manage</button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No Vouchers available</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", "Voucher", new { page = i })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

<script>
    function manage(no) {
        // Implement your delete functionality here.
        // For example, you might send an AJAX request to the server to delete the item.
        alert('Manage with No: ' + no);
    }
</script>
