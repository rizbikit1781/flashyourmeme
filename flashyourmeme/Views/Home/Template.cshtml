@model IEnumerable<ImageModel>

@{
    ViewData["Title"] = "Template Overview";
}
<div class="container mt-4 min-vh-100 template-overview">
    <h1 class="display-4 text-center mb-4 fw-bold">@ViewData["Title"]</h1>

    <div class="row mb-4">
            <div class="col-md-12">
                <div class="card mb-2">
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <label for="branch" class="form-label">Branch</label>
                                    <select class="form-select" id="branch" name="branch">
                                        <option selected>Select Branch</option>
                                        <option value="1">Branch 1</option>
                                        <option value="2">Branch 2</option>
                                        <option value="3">Branch 3</option>
                                    </select>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="setName" class="form-label">Setname</label>
                                    <select class="form-select" id="setname" name="setname">
                                        <option selected>Select Setname</option>
                                        <option value="1">Setname 1</option>
                                        <option value="2">Setname 2</option>
                                        <option value="3">Setname 3</option>
                                    </select>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="category" class="form-label">Category</label>
                                    <select class="form-select" id="category" name="category">
                                        <option selected>Select Category</option>
                                        <option value="1">Category 1</option>
                                        <option value="2">Category 2</option>
                                        <option value="3">Category 3</option>
                                    </select>
                                </div>
                                <div class="col-md-3 d-flex align-items-center mt-3">
                                    <button type="submit" class="btn btn-outline-dark w-100"><i class="fa-sharp fa-solid fa-cloud-arrow-up"></i>Upload Template</button>
                                </div>
                            </div>
                        </form>

                    </div>

                </div>
                
                <div class="bg-white p-4">
                <div class="row">
                    @foreach (var image in Model)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card">
                                <img src="@Url.Content(image.ImageUrl)" class="card-img-top" alt="@image.Title">
                                <div class="card-body text-center">
                                    <p>Set name: @image.Title</p>
                                    <p>File: @image.File</p>
                                    <button class="btn btn-primary me-2">Edit</button>
                                    <button class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                </div>

            </div>
    </div>

</div>
